<div class="page-header">
  <h1>Editing Course #<%= @course.id %></h1>
</div>

<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(course_url(@course), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :start_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :start_date, @course.start_date.strftime("%b %e, %Y"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :end_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :end_date, @course.end_date.strftime("%b %e, %Y"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cost, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cost, @course.cost, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :place, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :place, @course.place, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :start_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :start_time, @course.start_time.strftime("%l:%M%p"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :end_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :end_time, @course.end_time.strftime("%l:%M%p"), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :teacher, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :teacher, @course.teacher, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Course", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
