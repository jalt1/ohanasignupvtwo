<div class="page-header">
  <h1>New Slot</h1>
</div>

<% if @slot.errors.any? %>
  <% @slot.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(slots_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
      <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name), class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :course_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
    <%= select_tag :course_id, options_from_collection_for_select(Course.all, :id, :full_course_title), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :paid, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :paid %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :available, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :available %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Slot", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
